<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_dark</item>
        <item name="colorSecondaryVariant">@color/lime_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:textColor">@color/indigo_400</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="chipStyle" parent="Widget.AppTheme.LikeButton">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>